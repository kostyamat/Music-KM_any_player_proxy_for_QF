<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/noPlayersText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_players_found"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"/>

    <Button
        android:id="@+id/showAllAppsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_all_apps"/>

    <TextView
        android:id="@+id/mappingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mapping_header"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/saveMappingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_mapping"
        android:visibility="gone"/>
</LinearLayout>
